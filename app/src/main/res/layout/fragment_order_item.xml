<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzjytech.coffeeme.order.OrderItemFragment">

    <com.hzjytech.coffeeme.widgets.xrecyclerview.XRecyclerView
        android:id="@+id/allxrcyViewOrderitemfrg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </com.hzjytech.coffeeme.widgets.xrecyclerview.XRecyclerView>

    <TextView
        android:id="@+id/allemptyview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
    <com.hzjytech.coffeeme.widgets.xrecyclerview.XRecyclerView
        android:id="@+id/partxrcyViewOrderitemfrg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.hzjytech.coffeeme.widgets.xrecyclerview.XRecyclerView>

    <TextView
        android:id="@+id/partemptyview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
</RelativeLayout>