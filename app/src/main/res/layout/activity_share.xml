<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/little_white"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/normal_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="专属邀请码："
                    android:textColor="@color/standard_black"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_invitation_code"
                    android:text="9871454"
                    android:textColor="@color/coffee_bottom_water"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_marginTop="62dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_zxing"
                android:layout_width="180dp"
                android:layout_height="180dp" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="扫一扫上面的二维码图案，下载coffee me"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:textColor="@color/standard_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_share"
                android:clickable="true"
                android:layout_marginTop="30dp"
                android:text="立即分享"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/selector_share_button"
                android:layout_width="220dp"
                android:layout_height="36dp" />
            <View
                android:layout_marginTop="30dp"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="用户须知"
                android:textColor="@color/standard_black"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="将Cofffee Me推荐给好友，只要他（她）在注册账号时输入你的专属邀请\n码，你们将各获得一张优惠券。"
                android:textColor="@color/standard_black"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>