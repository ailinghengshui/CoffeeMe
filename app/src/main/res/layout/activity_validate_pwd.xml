<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzjytech.coffeeme.me.ValidatePwdActivity">

    <include layout="@layout/titlebar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/light_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/normal_white"
            >
            <EditText
                android:id="@+id/etOldPsdPsd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:textColorHint="@color/light_grey"
                android:textSize="14dp" />

            <ImageView
                android:layout_gravity="center_vertical|right"
                android:id="@+id/ivOldpsdfrgClear"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:layout_marginRight="7dp"
                android:src="@drawable/icon_grey_clear"
                android:visibility="gone"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <TextView
            android:id="@+id/tvOldpsgErr"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/light_red"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnOldPsdNext"
            android:layout_width="220dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circ_rec_green"
            android:text="下一步"
            android:textColor="@color/normal_white"
            android:textSize="14dp"
            />


    </LinearLayout>

</LinearLayout>
