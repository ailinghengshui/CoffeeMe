<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/little_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/titlebar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/iv_detial_package"
             android:src="@drawable/package_empty"
             android:scaleType="fitXY"
             android:layout_width="match_parent"
             android:layout_height="187.5dp" />

             <LinearLayout
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="45dp"
                 android:background="@color/normal_white"
                 android:gravity="center_vertical"
                 android:orientation="horizontal"
                 android:paddingLeft="20dp"
                 android:paddingRight="26dp">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="原价:"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1" />

                 <TextView
                     android:id="@+id/tvDetailPackageOriginalsum"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="￥40"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

             </LinearLayout>


             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/line_height"
                 android:layout_marginLeft="20dp"
                 android:background="@color/normal_grey" />


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="45dp"
                 android:background="@color/normal_white"
                 android:gravity="center_vertical"
                 android:orientation="horizontal"
                 android:paddingLeft="20dp"
                 android:paddingRight="26dp">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="实付金额:"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1" />

                 <TextView
                     android:id="@+id/tvDetailPackageRealSum"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="￥20"
                     android:textColor="@color/light_red"
                     android:textSize="17dp" />

             </LinearLayout>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/line_height"
                 android:background="@color/line_color" />


             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/line_height"
                 android:layout_marginTop="10dp"
                 android:background="@color/line_color" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="44dp"
                 android:background="@color/normal_white"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="20dp"
                     android:text="订单编号:"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

                 <TextView
                     android:id="@+id/tvDetailPackageId"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

             </LinearLayout>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/line_height"
                 android:layout_marginLeft="20dp"
                 android:background="@color/line_color" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="44dp"
                 android:background="@color/normal_white"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="20dp"
                     android:text="下单时间:"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

                 <TextView
                     android:id="@+id/tvDetailPackageDate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/standard_black"
                     android:paddingLeft="10dp"
                     android:text="12月25日 20:30"
                     android:textSize="15dp" />

             </LinearLayout>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/line_height"
                 android:layout_marginLeft="20dp"
                 android:background="@color/line_color" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="44dp"
                 android:background="@color/normal_white"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="20dp"
                     android:text="支付方式:"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

                 <TextView
                     android:id="@+id/tvOrderDetailPackagePayprovider"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:text="微信支付"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

             </LinearLayout>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/line_height"
                 android:layout_marginLeft="20dp"
                 android:background="@color/line_color" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="44dp"
                 android:background="@color/normal_white"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="20dp"
                     android:text="当前状态:"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

                 <TextView
                     android:id="@+id/tvOrderDetailPackageStatus"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:text="已完成"
                     android:textColor="@color/standard_black"
                     android:textSize="15dp" />

             </LinearLayout>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/line_height"
                 android:background="@color/line_color" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginBottom="100dp"
                 >

                 <TextView
                     android:layout_marginTop="20dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginBottom="10dp"
                     android:textSize="14sp"
                     android:textColor="@color/standard_grey"
                     android:text="用户须知" />

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:paddingLeft="15dp"
                     android:paddingRight="15dp"
                     android:text="@string/package_tip_1"
                     android:textColor="@color/standard_grey"
                     android:textSize="10dp" />

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:paddingLeft="15dp"
                     android:paddingRight="15dp"
                     android:text="@string/package_tip_2"
                     android:textColor="@color/standard_grey"
                     android:textSize="10dp" />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:paddingLeft="15dp"
                     android:paddingRight="15dp"
                     android:text="@string/package_tip_3"
                     android:textColor="@color/standard_grey"
                     android:textSize="10dp" />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:paddingLeft="15dp"
                     android:paddingRight="15dp"
                     android:text="@string/package_tip_4"
                     android:textColor="@color/standard_grey"
                     android:textSize="10dp" />

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginBottom="5dp"
                     android:paddingLeft="15dp"
                     android:paddingRight="15dp"
                     android:text="@string/package_tip_5"
                     android:textColor="@color/standard_grey"
                     android:textSize="10dp" />
             </LinearLayout>

         </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/normal_grey" />

        <Button
            android:id="@+id/btnOpeContainer1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/coffee"
            android:gravity="center"
            android:text="查看套餐"
            android:textColor="@color/normal_white"
            android:textSize="15dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/btnOpeContainer2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnOpe1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/normal_white"
                android:gravity="center"
                android:text="查看套餐"
                android:textColor="@color/coffee"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnOpe2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/coffee"
                android:gravity="center"
                android:text="去支付"
                android:textColor="@color/normal_white"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_anchor"
        android:layout_marginLeft="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</RelativeLayout>