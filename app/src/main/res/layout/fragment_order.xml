<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzjytech.coffeeme.order.OrderFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/titlebar" />
        <RelativeLayout
            android:background="@color/tansparent"
            android:layout_marginTop="@dimen/statu_bar_height"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height">
            <ImageView
                android:id="@+id/ivHomefrgCart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_white_cart" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/normal_white">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circ_rec_right_angle_dark_grey_border"
            android:orientation="vertical"
            android:layout_marginTop="9dp"
            android:padding="1dp">

            <android.support.design.widget.TabLayout
                android:id="@+id/tblayoutOrderfrgTab"
                style="@style/OrderTabLayout"
                android:layout_width="270dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                app:tabMode="fixed"
                app:tabTextColor="@color/coffee"
                ></android.support.design.widget.TabLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vPgOrderfrgShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
