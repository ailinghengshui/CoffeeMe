<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="244dp">

<ImageView
    android:id="@+id/iv_box"
    android:src="@drawable/sugar_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_material_title"
        android:src="@drawable/sugar_title"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_width="73dp"
        android:layout_height="21dp" />
    <ImageButton
        android:id="@+id/ib_material"
        android:src="@drawable/sugar_button"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_width="58dp"
        android:layout_height="58dp" />
    <ImageView
        android:src="@drawable/lighting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>