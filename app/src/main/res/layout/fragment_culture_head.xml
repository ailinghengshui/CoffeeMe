<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="308dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.hzjytech.coffeeme.culture.CulturePosterFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175.5dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/ivCultureBannerShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_none" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_banner_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="1"
        android:text="极伽时光“碰撞”魔都背后的故事"
        android:textColor="@color/standard_black"
        android:textSize="14sp" />


</LinearLayout>
