<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_black"
        android:text="添加至我的收藏"
        android:layout_gravity="center"
        android:textSize="17dp"
        />
    <EditText
        android:id="@+id/etCollectDialogName"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="请输入咖啡名称"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLength="16"
        android:background="@drawable/bg_circ_rec_black_border_white"
        android:textColor="@color/normal_black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvCollectDialogCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="@color/normal_blue"
            />
        <TextView
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tvCollectDialogOK"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="@color/normal_blue"
            />

    </LinearLayout>

</LinearLayout>