<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_no_sugar"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/sugar_tablayout_background"
        android:gravity="center"
        android:text="不甜"
        android:clickable="true"
        android:textColor="@drawable/selector_sugar_text"
        android:textSize="11dp" />
    <TextView
        android:id="@+id/tv_three_sugar"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/sugar_tablayout_background"
        android:gravity="center"
        android:clickable="true"
        android:text="3分甜"
        android:textColor="@drawable/selector_sugar_text"
        android:textSize="11dp" />
    <TextView
        android:id="@+id/tv_five_sugar"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/sugar_tablayout_background"
        android:gravity="center"
        android:text="5分甜"
        android:clickable="true"
        android:textColor="@drawable/selector_sugar_text"
        android:textSize="11dp" />
    <TextView
        android:id="@+id/tv_seven_sugar"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:background="@drawable/sugar_tablayout_background"
        android:gravity="center"
        android:text="7分甜"
        android:textColor="@drawable/selector_sugar_text"
        android:textSize="11dp" />

</LinearLayout>