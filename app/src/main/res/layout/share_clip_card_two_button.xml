<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/tansparent"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
     <RelativeLayout
         android:id="@+id/rl_card"
         android:background="@drawable/share_card"
         android:layout_width="300dp"
         android:layout_height="402dp">
         <ImageView
             android:clickable="true"
             android:id="@+id/iv_left"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="200dp"
             android:background="@color/tansparent"
             android:layout_width="200dp"
             android:layout_height="50dp" />
      <ImageView
          android:id="@+id/iv_share_card_bottom"
          android:background="@drawable/bg_share_cart_bottom"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="10dp"
          android:layout_width="280dp"
          android:layout_height="85dp" />
         <TextView
             android:id="@+id/tv_title"
             android:layout_marginBottom="-16dp"
             android:textSize="17dp"
             android:layout_centerHorizontal="true"
             android:layout_above="@id/iv_share_card_bottom"
             android:padding="5dp"
             android:background="@color/white"
             android:text="【夏日午后】"
             android:textColor="@color/text_little_grey"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <TextView
             android:id="@+id/tv_content"
             android:textSize="14dp"
             android:layout_below="@id/tv_title"
             android:text="ajfdskjsdajfjdasfj"
             android:textColor="@color/text_little_grey"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="30dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </RelativeLayout>
    <ImageView
        android:id="@+id/bt_close"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_card"
        android:clickable="true"
        android:src="@drawable/icon_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>