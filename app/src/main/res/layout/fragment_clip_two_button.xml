<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="180dp">
  <TextView
      android:gravity="center"
      android:textSize="18sp"
      android:textColor="@color/white"
      android:text="配方卡已生成"
      android:id="@+id/tv_title"
      android:background="@drawable/bg__top_cir_rec_coffee"
      android:layout_width="match_parent"
      android:layout_height="40dp" />
    <TextView
        android:paddingTop="10dp"
        android:background="@color/white"
        android:id="@+id/tv_clip_content"
        android:gravity="center_horizontal"
        android:textColor="@color/text_little_grey"
        android:textSize="16sp"
        android:text="adfafasfdasdf"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="90dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/bg_bottom_circ_rec"
        android:layout_width="match_parent"
        android:layout_height="35dp">
      <TextView
          android:id="@+id/btn_left"
          android:clickable="true"
          android:textSize="14sp"
          android:background="@drawable/bg_circ_rec_pink"
          android:textColor="@color/coffee"
          android:gravity="center"
          android:text="取消"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="25dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_right"
          android:textSize="14sp"
          android:background="@drawable/bg_circ_rec_coffee"
          android:textColor="@color/white"
            android:gravity="center"
          android:text="去粘贴"
          android:layout_width="0dp"
            android:layout_weight="1"
          android:layout_height="25dp" />
    </LinearLayout>
</LinearLayout>