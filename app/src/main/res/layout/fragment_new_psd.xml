<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/light_white"
    android:gravity="center_horizontal"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/normal_white"
        android:orientation="horizontal"
        >
        <EditText
            android:gravity="center"
            android:id="@+id/etNewPsdPsd"
            android:hint="输入新密码"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColorHint="@color/light_grey"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_height="44dp"

            />
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:id="@+id/ivNewpsdfrgClear"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_grey_clear"
            android:visibility="gone"
            android:layout_marginRight="7dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/light_grey"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/normal_white"
        >
        <EditText
            android:gravity="center"
            android:id="@+id/etNewPsdRePsd"
            android:hint="请再次输入新密码"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColorHint="@color/light_grey"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:layout_height="44dp"
            android:background="@null"
            />
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:id="@+id/ivNewpsdfrgReclear"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="5dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/icon_grey_clear"
            android:visibility="gone"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        />

    <TextView
        android:id="@+id/tvNewpsgErr"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/light_red"
        android:textSize="12dp"
        />
    <Button
        android:id="@+id/btnNewPsdOK"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:textSize="14dp"
        android:textColor="@color/normal_white"
        android:background="@drawable/bg_circ_rec_green"
        android:text="确定"
        />

</LinearLayout>