<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/tansparent"
    android:layout_marginTop="10dp"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:id="@+id/ll_benefit"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bg_benefit_custom_top"
        android:layout_width="240dp"
        android:layout_height="120dp">
          <RelativeLayout
              android:layout_centerInParent="true"
              android:background="@drawable/bg_benefit"
              android:layout_width="219dp"
              android:layout_height="60.5dp">
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="60.5dp">
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_count"
                            android:layout_marginLeft="10dp"
                            android:textSize="36sp"
                            android:textColor="@color/white"
                            android:text="8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_unit"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/tv_count"
                            android:textSize="16sp"
                            android:layout_marginTop="18dp"
                            android:textColor="@color/white"
                            android:text="元"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>

              <LinearLayout
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="110dp"
                  android:layout_centerVertical="true"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <TextView
                      android:id="@+id/tv_detail_count"
                      android:textSize="10sp"
                      android:text="8.0折优惠券"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <TextView
                      android:id="@+id/tv_detail_able"
                      android:textSize="10sp"
                      android:text="可直接使用"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <TextView
                      android:id="@+id/tv_detail_life"
                      android:textSize="10sp"
                      android:text="有效期5天"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
              </LinearLayout>
           


          </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/bg_benefit_custom_bottom"
        android:layout_width="240dp"
        android:layout_height="100dp">
        <LinearLayout
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
           <TextView
               android:textSize="14dp"
               android:layout_marginTop="10dp"
               android:textColor="@color/white"
               android:text="恭喜您"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_desc_new_benefit"
               android:textSize="8dp"
               android:layout_marginTop="10dp"
               android:textColor="@color/white"
               android:text="获得一张新手8.0折优惠券"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_my_coupons"
                android:background="@drawable/selector_bg_benefit"
                android:textSize="10dp"
                android:textColor="@color/selector_new_benefit_button"
                android:text="查看我的优惠券"
                android:layout_marginTop="15dp"
                android:layout_width="120dp"
                android:layout_height="22dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
    <ImageView
        android:clickable="true"
        android:id="@+id/bt_close"
        android:src="@drawable/button_close"
        android:layout_toRightOf="@id/ll_benefit"
        android:layout_marginLeft="-15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>