<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="22dp"
    android:paddingRight="22dp">

    <TextView
        android:id="@+id/tvOrderrowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tvOrderrowCount"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="摩卡（自调）"
        android:textColor="@color/standard_black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvOrderrowCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1杯"
        android:textColor="@color/standard_black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvOrderrowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_toLeftOf="@+id/tvOrderPriceUnit"
        android:text="10"
        android:textColor="@color/standard_grey"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvOrderPriceUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:text="元"
        android:textColor="@color/standard_grey"
        android:textSize="14dp" />

</RelativeLayout>