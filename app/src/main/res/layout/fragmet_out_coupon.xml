<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/tansparent"
    android:layout_marginTop="10dp"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ll_benefit"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/bg_benefit_custom_top"
            android:layout_width="240dp"
            android:layout_height="60dp">
          <TextView
              android:textColor="@color/coffee_bottom_water"
              android:layout_centerInParent="true"
              android:textSize="17dp"
              android:text="优惠券过期提醒"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/bg_benefit_custom_bottom"
            android:layout_width="240dp"
            android:layout_height="160dp">
            <LinearLayout
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14dp"
                    android:layout_marginTop="46dp"
                    android:textColor="@color/white"
                    android:text="您有优惠券即将过期"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:text="赶紧去使用吧~"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/bt_my_coupons"
                    android:background="@drawable/selector_bg_benefit"
                    android:textSize="10dp"
                    android:textColor="@color/selector_new_benefit_button"
                    android:text="查看我的优惠券"
                    android:layout_marginTop="15dp"
                    android:layout_width="120dp"
                    android:layout_height="22dp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:clickable="true"
        android:id="@+id/bt_close"
        android:src="@drawable/button_close"
        android:layout_toRightOf="@id/ll_benefit"
        android:layout_marginLeft="-15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>