<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="vertical"
    android:background="@color/normal_white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/light_grey"
        />

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/tvPaymentitemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textSize="12dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/coffee"
        android:paddingLeft="20dp"
        />
    
    <LinearLayout
        android:paddingTop="11dp"
        android:paddingLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:gravity="center"
            android:id="@+id/tvPaymentitemDosage1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/tvPaymentitemDosage2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/tvPaymentitemDosage3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="11dp"
        />
        <TextView
            android:gravity="center"
            android:id="@+id/tvPaymentitemDosage4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="11dp"
        />
        <TextView
            android:gravity="center"
            android:id="@+id/tvPaymentitemDosage5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="11dp"
        />

    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="原价"
            android:id="@+id/tvPaymentitemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:textColor="@color/little_black"
            />
        <TextView
            android:visibility="gone"
            android:text="12.00"
            android:id="@+id/tvPaymentitemOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:paddingLeft="20dp"
            android:textColor="@color/heavy_grey"
            />
    </LinearLayout>


</LinearLayout>