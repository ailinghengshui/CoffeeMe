<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvValidateDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/normal_black"
        android:textSize="17dp" />


    <TextView
        android:id="@+id/tvValidateDialogDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:textColor="@color/dark_black"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/ivValidateDialogCode"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/etValidateDialogCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_circ_rec_black_border_white"
        android:gravity="center"
        android:hint="请输入验证码"
        android:lines="1"
        android:maxLength="6"
        android:paddingBottom="4dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="4dp"
        android:textCursorDrawable="@color/normal_black"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnValidateDialogOpleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_ignore"
            android:textColor="@color/normal_blue" />

        <TextView
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/btnValidateDialogOpright"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_update"
            android:textColor="@color/normal_blue" />
    </LinearLayout>

</LinearLayout>