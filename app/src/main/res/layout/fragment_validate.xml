<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/llForgetpsdContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_circ_rec_top"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/etForgetpsdPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:maxLength="11"
                android:background="@null"
                android:hint="@string/str_hint_phone"
                android:inputType="phone"
                android:textColor="@color/normal_white"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_size"
                />
            <ImageView
                android:id="@+id/ivOldpsdfrgClear"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_grey_clear"
                android:visibility="gone"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_circ_rec_bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etForgetpsdSmscode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28dp"
                android:layout_weight="1"
                android:maxLength="6"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColor="@color/normal_white"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/btnForgetpsdSmscode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_circ_rec_white_border"
                android:text="获取验证码"
                android:textColor="@color/normal_white"
                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnForgetpsdNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:background="@drawable/selector_btn_click_bg_white"
            android:text="@string/str_text_next"
            android:textColor="@color/normal_white"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>