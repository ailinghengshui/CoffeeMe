<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzjytech.coffeeme.home.ModulationActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlModulationIntro"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:background="@drawable/modulation_bg">
           <ImageView
               android:src="@drawable/modulation_name_board"
               android:layout_marginTop="@dimen/y40"
               android:layout_marginLeft="@dimen/x45"
               android:layout_width="@dimen/x133"
               android:layout_height="@dimen/y80" />
            <TextView
                android:id="@+id/tvModulationName"
                android:layout_width="@dimen/x133"
                android:layout_height="@dimen/y80"
                android:gravity="center"
                android:text="巧克力咖啡"
                android:layout_marginTop="@dimen/y40"
                android:layout_marginLeft="@dimen/x45"
                android:textColor="@color/heavy_yellow"
                android:textSize="@dimen/x20" />

            <Button
                android:id="@+id/btnModulationCollect"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginTop="1dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/img_collect" />


            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/circle_yellow"
                android:orientation="vertical"
                android:layout_height="50dp"
                android:layout_width="50dp">
               <TextView
                   android:layout_marginTop="1dp"
                   android:gravity="center_horizontal"
                   android:text="¥"
                   android:textColor="@color/standard_black"
                   android:textSize="17sp"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvModulationPrice"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.00"
                    android:textColor="@color/standard_black"
                    android:textSize="17sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/btnModulationShow"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cup" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llModulationDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="108dp"
            android:layout_below="@+id/rlModulationIntro"
            android:clipChildren="false"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tabModulationDosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:tabMode="fixed"
                app:tabIndicatorColor="@null"
                app:tabMaxWidth="62dp"
                app:tabPaddingStart="2dp"
                app:tabPaddingEnd="2dp"
                ></android.support.design.widget.TabLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vPgModulationShow"
                    android:layout_width="250dp"
                    android:layout_height="210dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:clipChildren="false"></android.support.v4.view.ViewPager>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/rect_fine_coffee_parent"
            >

            <TextView
                android:id="@+id/tvModulationMin"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="000"
                android:textColor="@color/normal_white" />
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/x312"
                android:layout_height="35dp">
                <ImageView
                    android:src="@drawable/line_white"
                    android:layout_marginLeft="3dp"
                    android:layout_width="@dimen/x300"
                    android:layout_height="35dp" />
                <com.hzjytech.coffeeme.widgets.BubbleSeekBar
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    app:bsb_track_color="@color/dark_black"
                    app:bsb_second_track_color="@color/dark_black"
                    app:bsb_track_size="0dp"
                    app:bsb_thumb_color="@color/dark_black"
                    app:bsb_bubble_color="@color/coffee"
                    android:gravity="center"
                    app:bsb_thumb_radius="17dp"
                    android:id="@+id/numSkbarModulation"
                    android:layout_height="35dp"
                    android:thumb="@drawable/img_slideblock" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvModulationMax"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:minWidth="25dp"
                android:gravity="center"
                android:text="12.6"
                android:textColor="@color/normal_white" />

            <TextView
                android:id="@+id/tvModulationUnit"
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent"
                android:text="g"
                android:gravity="center"
                android:textColor="@color/normal_white"
                android:layout_marginRight="6dp"
                android:textSize="12dp"

                />

            <LinearLayout
                android:id="@+id/llModualtionCount"
                android:layout_width="@dimen/x120"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cup_amount"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center"
                    android:text="杯数:"
                    android:textColor="@color/standard_black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvModulationCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/standard_black"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivModulationBack"
                android:clickable="true"
                android:layout_width="@dimen/x100"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_mo_back" />

            <ImageView
                android:id="@+id/btnModulationAddCart"
                android:clickable="true"
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/selector_addchart" />

            <ImageView
                android:id="@+id/btnModulationBuy"
                android:clickable="true"
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/selector_buynow" />
            <RelativeLayout
                android:id="@+id/rl_addcart"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivModulationCart"
                    android:clickable="true"
                    android:layout_width="@dimen/x100"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_chart" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvModulationHint"
        android:visibility="invisible"
        android:background="@drawable/bg_completely_notify"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="330dp"
        android:textColor="@color/standard_black"
        android:textSize="14dp"
        android:text="咖啡已达上限"
        android:layout_height="54dp" />


</RelativeLayout>