            <!--<ImageView-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_width="9dp"-->
                <!--android:layout_height="9dp"-->
                <!--android:layout_marginRight="22dp"-->
                <!--android:scaleType="centerInside"-->
                <!--android:src="@drawable/icon_right"-->
                <!--/>-->

        <!--</RelativeLayout>-->
        <TextView
            android:id="@+id/nologintx"
            android:layout_width="match_parent"
            android:background="@color/normal_white"
            android:layout_height="260dp"
            android:textSize="17dp"
            android:text="你还没有登录哦～"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/standard_black"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcyViewMefrgShow"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/normal_white"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
    <RelativeLayout
        android:clickable="true"
        android:visibility="visible"
        android:id="@+id/rl_guide"
        android:background="@color/trans_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="100dp"
            android:src="@drawable/guide_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_guide"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:background="@color/tansparent"
            android:layout_width="200dp"
            android:layout_height="80dp" />

    </RelativeLayout>
</FrameLayout>